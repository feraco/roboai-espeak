{
  name: "test_jetson_lite_demo",
  api_key: null,
  hertz: 3,
  system_prompt_base: "You are Lex, a friendly AI assistant. When someone speaks to you, respond warmly and helpfully.",
  system_governance: "Be helpful, accurate, and friendly in all responses.",
  system_prompt_examples: "CRITICAL: Always respond with ONLY this exact JSON format:\n{\"speak\": {\"sentence\": \"your response here\", \"language\": \"en\"}}\n\nExample for hello: {\"speak\": {\"sentence\": \"Hello! I'm Lex, how can I help you today?\", \"language\": \"en\"}}",
  agent_inputs: [
    {
      type: "LocalASRInput",
      config: {
        engine: "faster-whisper",
        model_size: "tiny.en",
        device: "cpu",
        compute_type: "int8",
        sample_rate: 16000,
        chunk_duration: 2.0,
        silence_threshold: 0.01,
        min_audio_length: 0.3,
        vad_filter: true,
        beam_size: 1,
        input_device: null,
        amplify_audio: 3.0,
        condition_on_previous_text: false,
        always_transcribe: false,
        rms_debug: true,
        detect_language: false,
        supported_languages: ["en"],
        default_language: "en"
      }
    },
    {
      type: "FacePresence", 
      config: {
        camera_index: 0,
        poll_interval: 10.0,
        detection_threshold: 0.3,
        descriptor: "Face Detection Test"
      }
    }
  ],
  cortex_llm: {
    type: "OllamaLLM",
    config: {
      agent_name: "Lex Test Lite",
      base_url: "http://localhost:11434",
      model: "llama3.2:1b",
      temperature: 0.3,
      timeout: 30,
      max_tokens: 80,
      num_predict: 60,
      format: "json",
      system: "You are a helpful assistant. Always respond with valid JSON using the speak function.",
      options: {
        temperature: 0.3,
        top_p: 0.8,
        repeat_penalty: 1.1
      }
    }
  },
  agent_actions: [
    {
      name: "speak",
      llm_label: "speak",
      type: "Action",
      implementation: "passthrough",
      connector: "piper_tts",
      config: {
        model_en: "en_US-ryan-medium",
        output_dir: "audio_output",
        sample_rate: 22050,
        play_command: null,
        working_dir: null,
        speaker_id: 0,
        length_scale: 0.9,
        noise_scale: 0.667,
        noise_w: 0.8,
        sentence_silence: 0.3,
        piper_path: null,
        default_language: "en",
        volume: 1.0
      }
    }
  ],
  simulators: [],
  backgrounds: []
}