{
  name: "simple_vision_greeter",
  api_key: null,
  hertz: 2,
  system_prompt_base: "You are Lex, Channel Chief for Lexful. When you see a person through the camera, introduce yourself briefly and warmly. When you see no person, stay quiet.",
  system_governance: "Only respond when you detect people in camera input. Be welcoming and professional.",
  system_prompt_examples: "When you see a person: {\"speak\": {\"sentence\": \"Hello! I'm Lex, Channel Chief for Lexful. Welcome!\", \"language\": \"en\"}}",
  agent_inputs: [
    {
      type: "VLMOllamaVision",
      config: {
        camera_index: 0,
        poll_interval: 5.0,
        model: "llava:latest",
        base_url: "http://localhost:11434",
        prompt: "Is there a person in this image? Answer with just 'YES' if you see a person, 'NO' if no person visible.",
        descriptor: "Person Detection - Vision Greeter"
      }
    }
  ],
  cortex_llm: {
    type: "OllamaLLM", 
    config: {
      agent_name: "Vision Greeter",
      base_url: "http://localhost:11434",
      model: "gemma2:2b",
      temperature: 0.2,
      timeout: 30,
      max_tokens: 80,
      num_predict: 60,
      options: {
        temperature: 0.2,
        top_p: 0.9,
        repeat_penalty: 1.1
      }
    }
  },
  agent_actions: [
    {
      name: "speak",
      llm_label: "speak", 
      type: "Action",
      implementation: "passthrough",
      connector: "piper_tts",
      config: {
        model_en: "en_US-ryan-medium",
        output_dir: "audio_output",
        sample_rate: 22050,
        play_command: null,
        working_dir: null,
        speaker_id: 0,
        length_scale: 0.9,
        noise_scale: 0.667,
        noise_w: 0.8,
        sentence_silence: 0.3,
        piper_path: null,
        default_language: "en",
        volume: 1.0
      }
    }
  ],
  simulators: [],
  backgrounds: []
}